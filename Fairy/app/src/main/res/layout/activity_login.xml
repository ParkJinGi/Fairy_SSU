<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splashbackground"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp"
    tools:context="com.SSUAndroidProject.fairy.LoginActivity">

    <ImageView
        android:id="@+id/img"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/fairy_logo"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="8dp"/>

    <TextView
        android:id="@+id/FestivalDiary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Festival Diary"
        android:textSize="20dp"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/img"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <android.support.design.widget.TextInputLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="80dp"
        android:id="@+id/textInputLayout6"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:textColorHint="#5DFFFFFF"
        app:layout_constraintTop_toBottomOf="@+id/img"
        app:layout_constraintHorizontal_bias="0.0">

        <EditText
            android:id="@+id/edittext_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:textColor="@color/white"
            android:hint="Email"
            android:inputType="textEmailAddress" />
    </android.support.design.widget.TextInputLayout>


    <com.unstoppable.submitbuttonview.SubmitButton
        android:id="@+id/email_create_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:theme="@style/MyButton"
        android:textStyle="bold"
        style="@style/Widget.AppCompat.Button.Borderless"
        app:buttonText="회원가입"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayout7"
        android:layout_marginTop="11dp"
        app:layout_constraintRight_toLeftOf="@+id/email_login_button"
        android:layout_marginRight="8dp"
        app:buttonColor="#D5C2EE"
        app:failedColor="@color/pink_pressed"
        app:succeedColor="@color/pink_pressed"/>

    <com.unstoppable.submitbuttonview.SubmitButton
        android:id="@+id/email_login_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:theme="@style/MyButton"
        style="@style/Widget.AppCompat.Button.Borderless"
        app:buttonText="로그인"
        android:textColor="@android:color/white"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="11dp"
        android:layout_marginRight="11dp"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayout7"
        app:buttonColor="#D5C2EE"
        app:failedColor="@color/pink_pressed"
        app:succeedColor="@color/pink_pressed"/>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/textInputLayout7"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:textColorHint="#5DFFFFFF"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayout6"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp">

        <EditText
            android:id="@+id/edittext_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Password"
            android:textColor="@color/white"
            android:inputType="textPassword"
            />
    </android.support.design.widget.TextInputLayout>

</android.support.constraint.ConstraintLayout>

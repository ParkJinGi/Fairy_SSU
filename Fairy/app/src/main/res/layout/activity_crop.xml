<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splashbackground"
    tools:context="com.SSUAndroidProject.fairy.Fragment.Add_Review.Crop">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|top"
        android:paddingTop="30dp"
        android:textSize="18dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:text="원하는 부분이 가운데로 오게 설정하시오"/>

    <com.SSUAndroidProject.fairy.Fragment.Add_Review.Crop_Image_Library.CropView
        android:id="@+id/Crop_CropView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.melnykov.fab.FloatingActionButton
        android:id="@+id/Crop_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_margin="50dp"
        android:src="@drawable/ic_crop"
        fab:fab_colorNormal="@color/colorPrimary"
        fab:fab_colorPressed="@color/colorAccent"
        fab:fab_colorRipple="@color/colorGray" />

    <com.melnykov.fab.FloatingActionButton
        android:id="@+id/Rotate_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|left"
        android:layout_margin="50dp"
        android:src="@drawable/ic_rotate_right"
        fab:fab_colorNormal="@color/colorPrimary"
        fab:fab_colorPressed="@color/colorAccent"
        fab:fab_colorRipple="@color/colorGray" />

</FrameLayout>
